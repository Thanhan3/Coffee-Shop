<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_drink"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:scaleType="centerCrop"
        android:src="@color/colorPrimary"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_10sdp" />

    <TextView
        android:id="@+id/text_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_drink"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="312312321"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        android:text="100.000vnd"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text"
        android:textSize="@dimen/_10sdp"
        android:layout_toStartOf="@id/text_count_drink"
        android:layout_marginEnd="@dimen/_10sdp"
        android:text="hehehehe"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_below="@id/text_order_id"
        android:layout_toEndOf="@id/img_drink"
        android:layout_marginTop="@dimen/_5sdp" />

    <TextView
        android:id="@+id/text_count_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(2do uong)"
        android:layout_below="@id/text_price"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp" />

    <TextView
        android:id="@+id/text_follow_oder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theo dõi đơn hàng"
        android:layout_below="@id/text_description"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/_13ssp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:drawablePadding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:drawableEndCompat="@drawable/ic_arrow_forward" />



    <View
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:background="@color/gray"
        android:layout_below="@id/text_follow_oder"/>

</RelativeLayout>