<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_drink"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:scaleType="centerCrop"
        android:src="@color/colorPrimary"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_10sdp"
        />

    <TextView
        android:id="@+id/text_name_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_drink"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Capuchino"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        android:text="100.000vnd"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_text"
        android:textSize="@dimen/_10sdp"
        android:layout_toStartOf="@id/text_count"
        android:layout_marginEnd="@dimen/_10sdp"
        android:text="hehehehe"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_below="@id/text_name_drink"
        android:layout_toEndOf="@id/img_drink"
        android:layout_marginTop="@dimen/_5sdp"
        />

    <TextView
        android:id="@+id/text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x2"
        android:layout_below="@id/text_price"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"/>

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_edit"
        android:layout_below="@id/text_description"
        android:layout_toEndOf="@id/img_drink"
        android:layout_marginTop="@dimen/_5sdp"/>
    <LinearLayout
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/text_description">
        <ImageView
            android:id="@+id/image_minus"
            android:background="@drawable/square_background"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_sub"/>

        <TextView
            android:id="@+id/ed_count"
            android:layout_width="23dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/square_background"
            android:inputType="number"
            android:text="1" />
        <ImageView
            android:id="@+id/image_add"
            android:background="@drawable/square_background"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_add"/>
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:background="@color/gray"
        android:layout_below="@id/img_edit"/>




</RelativeLayout>